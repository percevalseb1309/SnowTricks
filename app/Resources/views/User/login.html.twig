{% extends "layout.html.twig" %}

{% block title %}
    Login - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# <link rel="stylesheet" type="text/css" href="{{ asset('css/form.css') }}" /> #}
    {% stylesheets 'css/form.css' filter='?scssphp' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block section %}
    <h1>Login</h1>

    <div class="col-md-12 well well-lg">
        <div class="row">
            <div class="col-md-8">

                {% if error %}
                    <div class="alert alert-danger alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Warning!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <div class="row">
                        <div class="form-group col-xs-12 col-sm-6">
                            <label class="control-label required" for="username">Login</label>
                            <input type="text" id="username" name="_username" required="required" class="form-control" value="{{ last_username }}" placeholder="Enter your username or email" />
                        </div>
                    </div>


                    <div class="row">
                        <div class="form-group col-xs-12 col-sm-6">
                            <label class="control-label required" for="password">Password</label>
                            <input type="password" id="password" name="_password" required="required" class="form-control" />
                        </div>
                    </div>

                    <div class="row text-center">
                        <div class="form-group col-xs-12 col-sm-6">
                            <a href="{{ path('forgot_password') }}" >Forgot Password ?</a>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                    <div class="row">
                        <div class="form-group col-xs-12 col-sm-6">
                            <button type="submit" id="TrickType_submit" name="TrickType[submit]" class="btn btn-primary pull-right btn">Connexion</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}